{{#staff}}
<h1>Detail osoby {{name}}</h1>
<dl>
    <dt>Jméno</dt>
    <dd>{{name}}</dd>

    <dt>Příjmení</dt>
    <dd>{{surname}}</dd>

    <dt>Pozice</dt>
    <dd>{{job}}</dd>

    <dt>Telefon</dt>
    <dd>{{#phone}}{{phone}}{{/phone}}{{^phone}}&mdash;{{/phone}}</dd>


    <dt>Místnosti</dt>
    {{#room}}
        <dd>
            <a href='employee.php?employee_id={{employee_id}}'>{{surname}} {{name}}</a>
        </dd>
    {{/room}}
</dl>
{{/staff}}